---
import Layout from '../layouts/Layout.astro';
import NFTContainer from '../components/nft-container.astro';
import NFTContent from '../components/nft-content.astro';
import NFTFaces from '../components/nft-faces.astro';

import NFTFront from '../layouts/nft-front.astro';
import NFTBack from '../layouts/nft-back.astro';

const containerSize = {
	width: '500px',
	height: '584px',
};

const ticketSize = {
	width: '456px',
	height: '257px',
}
---

<Layout title="Welcome to Astro.">
	<NFTContainer size={containerSize} backGroundColor="linear-gradient(rgb(69, 69, 69) 5.5%, rgb(0, 0, 0) 94.5%);" >
		<NFTContent>
			<NFTFaces size={ticketSize}>
				<NFTFront />
				<NFTBack />
			</NFTFaces>
		</NFTContent>
	</NFTContainer>
</Layout>

<script>
	import { LicenseManager } from "../package/license-manager";

	window.app = {
		licenseManager: new LicenseManager()
	};
</script>