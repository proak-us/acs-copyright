export interface Props {
}
---

<div class="context-menu" id="context-menu">
    <div class="context-menu-container" id="context-menu-content"></div>
</div>

<script>
    const contextMenu = document.getElementById('context-menu-content');

    if (contextMenu) {
        if (window.app?.licenseManager) {
            console.log("[CHEGOU AQUI]")
            contextMenu.appendChild(window.app.licenseManager.renderLicense());
        }
    }
</script>

<style>
    .context-menu {
        display: none;
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-color: rgba(0, 0, 0, 0.5);
        z-index: 100;

        justify-content: center;
        align-items: center;
    }

    .context-menu-container {
        min-width: 200px;
        background-color: #fff;
        border-radius: 5px;
        padding: 10px;
        border: 1px solid #000;
    }

    .context-menu-container div {
        padding: 5px 10px;
        cursor: pointer;
        border-radius: 5px;

        background-color: red;
    }

    .context-menu-container div:hover {
        transform: scale(1.05);
        background-color: #ccc;
        transition: 0.2s;
    }
</style>